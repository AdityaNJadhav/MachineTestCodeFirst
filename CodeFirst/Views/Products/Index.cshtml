@model IPagedList<CodeFirst.Models.Products>

@{
    ViewBag.Title = "Index";
}

@using PagedList.Mvc;
@using PagedList;

<br />
<p>
    @Html.ActionLink("Create Product", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().ProductID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().CategoryID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().CategoryName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }, new { @class = "btn btn-primary btnStyle" })
                @Html.ActionLink("Details", "Details", new { id = item.ProductID }, new { @class = "btn btn-success btnStyle" })
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductID }, new { @class = "btn btn-danger btnStyle" })
            </td>
        </tr>
    }

</table>

@Html.PagedListPager(Model,i=>Url.Action("Index", "Products", new {i, search=Request.QueryString["search"]}))